{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}


<h1>Sign up</h1>

<form method="post" action="/rem/signup/create">

    <div>
        <label for="inputName">Name</label>
        <input id="inputName" name="name" placeholder="Name" autofocus value="{{ user.name }}" />
        {%  if  errors.name %}
        <div class="error" style="color: orangered">{{ errors.name }}</div>
        {%  endif %}
    </div>
    <div>
        <label for="inputEmail">Email address</label>
        <input id="inputEmail" name="email" placeholder="email address" value="{{ user.email }}" />
        {%  if  errors.email %}
            <div class="error" style="color: orangered">{{ errors.email }}</div>
        {%  endif %}
    </div>
    <div>
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" placeholder="Password" />
    </div>
    <div>
        <label for="inputPasswordConfirmation">Repeat password</label>
        <input type="password" id="inputPasswordConfirmation" name="password_confirmation"
               placeholder="Repeat password" />
        {%  if  errors["password"] %}
            <div class="error" style="color: orangered">{{ errors["password"] }}</div>
        {%  endif %}
    </div>

    <button type="submit">Sign up</button>

</form>

{% endblock %}